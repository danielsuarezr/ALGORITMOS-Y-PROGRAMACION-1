
#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include <string>

using namespace std;

string invertir(string str1,int n);

void main()
{
	string str1, str2;
	int tam;
		cout << "palabra : ";
		cin >> str1;
		tam = str1.length();
		str2 = invertir(str1, tam);
		if (str1 == str2)
			cout << str2 << " " << "si es palindromo";
		else
			cout << str1 << " " << "no es palindromo";
	
	_getch();
}
string invertir(string str1,int n)
{
	char aux;
	for (int i = 0; i < n/2; i++)
	{
		aux = str1.at(i);
		str1.at(i) = str1.at(n - i - 1);
		str1.at(n - i - 1) = aux;
		

	}
	return str1;
}
